public class Solution {
    // DO NOT MODIFY THE LIST. IT IS READ ONLY
    public int maxSubArray(final List<Integer> A) {
        
        int currMax= 0;
        int finalMax= Integer.MIN_VALUE;
        
        if(A.size() ==0){
            return 0;
        }
        
        for(int i= 0; i<A.size(); i++){
           //Adding elements in countinuous to get sum of elements till index i
           currMax += A.get(i);
           
           //Finding current maximum till index i by comparing element at index i to maximum till index (i-1)
           currMax = Math.max( currMax, A.get(i));
           
           //Finding overall maximum till index i
           finalMax = Math.max(finalMax, currMax);
         
        }
        return finalMax;
    }
}
